<html>
<head>
    <link rel="stylesheet" href="navbar.css">
    <link rel="stylesheet" href="LR_page.css">
    <style>
        .reset-password-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 30px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .reset-password-header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .reset-password-header h1 {
            color: #333;
            margin-bottom: 10px;
        }
        
        .reset-password-header p {
            color: #666;
            font-size: 14px;
        }
        
        .security-questions-section {
            margin-bottom: 25px;
        }
        
        .security-questions-section h3 {
            color: #333;
            margin-bottom: 15px;
            font-size: 16px;
        }
        
        .question-group {
            margin-bottom: 20px;
        }
        
        .question-group label {
            display: block;
            margin-bottom: 5px;
            color: #555;
            font-weight: 500;
        }
        
        .question-group input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
            box-sizing: border-box;
        }
        
        .new-password-section {
            margin-bottom: 25px;
        }
        
        .new-password-section h3 {
            color: #333;
            margin-bottom: 15px;
            font-size: 16px;
        }
        
        .password-input-group {
            margin-bottom: 15px;
        }
        
        .password-input-group label {
            display: block;
            margin-bottom: 5px;
            color: #555;
            font-weight: 500;
        }
        
        .password-input-group input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
            box-sizing: border-box;
        }
        
        .reset-password-form button {
            width: 100%;
            padding: 12px;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
        }
        
        .reset-password-form button:hover {
            background: #0056b3;
        }
        
        .back-to-login {
            text-align: center;
            margin-top: 20px;
        }
        
        .back-to-login a {
            color: #007bff;
            text-decoration: none;
        }
        
        .back-to-login a:hover {
            text-decoration: underline;
        }
        
        .error-message {
            color: #dc3545;
            background: #f8d7da;
            border: 1px solid #f5c6cb;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
            font-size: 14px;
        }
        
        .success-message {
            color: #155724;
            background: #d4edda;
            border: 1px solid #c3e6cb;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
            font-size: 14px;
        }
        
        .token-info {
            background: #e7f3ff;
            border: 1px solid #b3d9ff;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
            font-size: 12px;
            color: #0066cc;
        }
    </style>
</head>

<body>
    <div class="homepage-container">
        <div class="reset-password-container">
            <div class="reset-password-header">
                <h1>Reset Password</h1>
                <p>Answer your security questions to reset your password</p>
            </div>
            
            {{#if errors.invalid_answers}}
                <div class="error-message">
                    One or more security answers are incorrect. Please try again.
                </div>
            {{/if}}
            
            {{#if errors.password_validation}}
                <div class="error-message">
                    Password validation failed: {{errors.password_validation_details}}
                </div>
            {{/if}}
            
            {{#if errors.reset_failed}}
                <div class="error-message">
                    Password reset failed. Please try again.
                </div>
            {{/if}}
            
            <div class="token-info">
                <strong>Email:</strong> {{email}}
            </div>
            
            <form class="reset-password-form" action="/reset-password" method="POST">
                <input type="hidden" name="email" value="{{email}}">
                
                <div class="security-questions-section">
                    <h3>Security Questions</h3>
                    
                    <div class="question-group">
                        <label for="answer1">{{questions.[0].question}}</label>
                        <input type="text" id="answer1" name="answer1" required>
                    </div>
                    
                    <div class="question-group">
                        <label for="answer2">{{questions.[1].question}}</label>
                        <input type="text" id="answer2" name="answer2" required>
                    </div>
                    
                    <div class="question-group">
                        <label for="answer3">{{questions.[2].question}}</label>
                        <input type="text" id="answer3" name="answer3" required>
                    </div>
                </div>
                
                <div class="new-password-section">
                    <h3>New Password</h3>
                    
                    <div class="password-input-group">
                        <label for="newPassword">New Password</label>
                        <input type="password" id="newPassword" name="newPassword" required>
                    </div>
                    
                    <div class="password-input-group">
                        <label for="confirmPassword">Confirm New Password</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" required>
                    </div>
                </div>
                
                <button type="submit">Reset Password</button>
            </form>
            
            <div class="back-to-login">
                <a href="/login">‚Üê Back to Login</a>
            </div>
        </div>
    </div>
</body>
</html>
