<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile - ProfDex</title>
    <link rel="stylesheet" href="editprofile_page.css">
    <link rel="stylesheet" href="navbar.css">
</head>
<body>
    <!-- Toast Notification Container for Last Use Information -->
    <div class="toast-container" id="toastContainer"></div>
    
    <div id="navbar">
        <a class="mainpage" href="/">Profdex</a>
        <span class="navbar-buttons">
            <a class="menu" href="/editprofile">About Me</a>
            {{#if (ne userType 'professor')}}
            <a class="menu" href="/createpost">Create Review</a>
            {{/if}}
            <a class="menu" href="/help">Help</a>
        </span>
        <span class="search-buttons">
            {{#if loggedInUser}}
                <a class="login-button" href="/logout">Logout</a>
            {{else}}
                <a class="login-button" href="/login">Login</a>
            {{/if}}
            {{#if (or (eq userType 'manager') (eq userType 'administrator'))}}
            <a class="moderator-link" href="/moderator">Moderator</a>
            {{/if}}
            {{#if (eq userType 'administrator')}}
            <a class="admin-link" href="/admin">Admin</a>
            {{/if}}
            <form action="/viewprof" method="post">
                <input type="text" class="search" id="search" name="search" placeholder="Professor Full Name">
                <button type="submit" id="searchbutton"></button>
            </form>
        </span>
    </div>

    <div class="page-container">
        <div class="profile-header">
            <div class="header-content">
                <h1>Edit Profile</h1>
                <p>Update your personal information and preferences</p>
            </div>
        </div>

        <div class="main-content">
            <div class="profile-section">
                <div class="profile-card">
                    <div class="profile-picture-section">
                        <div class="profile-picture-container">
                            <div class="profile-picture" id="image-input">
                                <div class="profile-picture-overlay">
                                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"/>
                                        <circle cx="12" cy="13" r="4"/>
                                    </svg>
                                    <span>Change Photo</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="profile-form-section">
                        <form action="/editprofile" method="post" class="profile-form">
                            {{#if errors.validation_error}}
                                <div class="alert alert-error">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"/>
                                        <line x1="15" y1="9" x2="9" y2="15"/>
                                        <line x1="9" y1="9" x2="15" y2="15"/>
                                    </svg>
                                    <span>Please fill all required fields with valid information.</span>
                                </div>
                            {{/if}}
                            {{#if errors.data_validation}}
                                <div class="alert alert-error">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"/>
                                        <line x1="15" y1="9" x2="9" y2="15"/>
                                        <line x1="9" y1="9" x2="15" y2="15"/>
                                    </svg>
                                    <span>Data validation failed. Please check your input and try again.</span>
                                </div>
                            {{/if}}
                            {{#if errors.success}}
                                <div class="alert alert-success">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="20,6 9,17 4,12"/>
                                    </svg>
                                    <span>Profile updated successfully!</span>
                                </div>
                            {{/if}}
                            {{#if errors.password_changed}}
                                <div class="alert alert-success">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="20,6 9,17 4,12"/>
                                    </svg>
                                    <span>Password changed successfully!</span>
                                </div>
                            {{/if}}

                            <div class="form-row">
                                <div class="form-group">
                                    <label for="firstName">First Name</label>
                                    <input type="text" id="firstName" class="form-input" name="firstName" placeholder="Enter your first name" value="{{ userData.firstName }}" required>
                                </div>
                                <div class="form-group">
                                    <label for="lastName">Last Name</label>
                                    <input type="text" id="lastName" class="form-input" name="lastName" placeholder="Enter your last name" value="{{ userData.lastName }}" required>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label for="email">Email Address</label>
                                    <input type="email" id="email" class="form-input" name="email" placeholder="Enter your email" value="{{ userData.email }}" required>
                                </div>
                                {{#if studentData}}
                                <div class="form-group">
                                    <label for="studentID">Student ID</label>
                                    <input type="text" id="studentID" class="form-input" name="studentID" placeholder="Enter your student ID" value="{{ studentData.studentID }}" required>
                                </div>
                                {{/if}}
                            </div>

                            {{#if studentData}}
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="course">Course</label>
                                    <select id="course" class="form-input" name="course" required>
                                        <option value="">Select a Course</option>
                                        {{#each courses}}
                                            <option value="{{_id}}" {{#if (eq _id ../studentData.course._id)}}selected{{/if}}>{{name}} ({{code}})</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            {{/if}}

                            {{#if (eq userType 'professor')}}
                            <div class="form-row">
                                <div class="form-group full-width">
                                    <label for="subjects">Subjects</label>
                                    {{#if professorSubjects.length}}
                                        <select id="subjects" class="form-input" name="subjects" multiple>
                                            {{#each subjects}}
                                                <option value="{{_id}}" {{#if (in _id ../professorSubjects)}}selected{{/if}}>{{name}} ({{code}})</option>
                                            {{/each}}
                                        </select>
                                        <div class="form-help">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <circle cx="12" cy="12" r="10"/>
                                                <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                                                <line x1="12" y1="17" x2="12.01" y2="17"/>
                                            </svg>
                                            <span>Hold Ctrl (or Cmd on Mac) to select multiple subjects</span>
                                        </div>
                                    {{else}}
                                        <div class="no-subjects-message">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <circle cx="12" cy="12" r="10"/>
                                                <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                                                <line x1="12" y1="17" x2="12.01" y2="17"/>
                                            </svg>
                                            <span>The professor has chosen not to display any information.</span>
                                        </div>
                                        <div class="form-help">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <circle cx="12" cy="12" r="10"/>
                                                <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                                                <line x1="12" y1="17" x2="12.01" y2="17"/>
                                            </svg>
                                            <span>You can select subjects below to display them</span>
                                        </div>
                                        <select id="subjects" class="form-input" name="subjects" multiple>
                                            {{#each subjects}}
                                                <option value="{{_id}}">{{name}} ({{code}})</option>
                                            {{/each}}
                                        </select>
                                    {{/if}}
                                </div>
                            </div>
                            {{/if}}

                            <div class="form-row">
                                <div class="form-group full-width">
                                    <label for="bio">Bio</label>
                                    <textarea id="bio" class="form-textarea" name="bio" placeholder="Tell us about yourself..." rows="4">{{ studentData.bio }}</textarea>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group full-width">
                                    <div class="security-questions-section">
                                        <h3>Security Questions</h3>
                                        <p>Set up security questions for password recovery</p>
                                        <a href="/setup-security-questions" class="setup-security-btn">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                                            </svg>
                                            Setup Security Questions
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group full-width">
                                    <div class="password-change-section">
                                        <h3>Change Password</h3>
                                        <p>Update your password to keep your account secure</p>
                                        <a href="/change-password-request" class="change-password-btn">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M15 7a2 2 0 0 1 2 2m4 0a6 6 0 0 1-7.743 5.743L11 17H9v2H7v2H4a1 1 0 0 1-1-1v-2.586a1 1 0 0 1 .293-.707l5.964-5.964A6 6 0 1 1 21 9z"/>
                                            </svg>
                                            Change Password
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="save-btn">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/>
                                        <polyline points="17,21 17,13 7,13 7,21"/>
                                        <polyline points="7,3 7,8 15,8"/>
                                    </svg>
                                    Save Changes
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            {{#unless (eq userType 'professor')}}
            <div class="posts-section">
                <div class="section-header">
                    <h2>My Reviews</h2>
                    <p>Manage your posted reviews and feedback</p>
                </div>

                {{#if postData.length}}
                    <div class="posts-grid">
                        {{#each postData}}
                        <div class="post-card">
                            <div class="post-header">
                                <div class="post-info">
                                    <h3 class="professor-name">{{toname}}</h3>
                                    <span class="course-tag">{{course}}</span>
                                </div>
                                <div class="post-actions">
                                    <a href="/viewreview?id={{_id}}" class="action-btn view-btn">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8z"/>
                                            <circle cx="12" cy="12" r="3"/>
                                        </svg>
                                        View
                                    </a>
                                    <a href="/editreview?reviewId={{_id}}" class="action-btn edit-btn">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                                        </svg>
                                        Edit
                                    </a>
                                    <form action="/delete-review-and-comments" method="post" class="delete-form">
                                        <input type="hidden" name="reviewId" value="{{_id}}">
                                        <button type="submit" class="action-btn delete-btn" onclick="return confirm('Are you sure you want to delete this review?')">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <polyline points="3,6 5,6 21,6"/>
                                                <path d="M19,6v14a2,2,0,0,1-2,2H7a2,2,0,0,1-2-2V6m3,0V4a2,2,0,0,1,2-2h4a2,2,0,0,1,2,2V6"/>
                                            </svg>
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <div class="post-content">
                                <p class="review-text">{{aPost.text}}</p>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                {{else}}
                    <div class="no-posts">
                        <div class="no-posts-icon">üìù</div>
                        <h3>No Reviews Yet</h3>
                        <p>You haven't posted any reviews yet. Start sharing your feedback!</p>
                        <a href="/createpost" class="create-review-btn">Create Your First Review</a>
                    </div>
                {{/if}}
            </div>
            {{/unless}}
        </div>
    </div>

    <script>
        // Toast Notification System for Last Use Information
        function showToast(message, type = 'info', duration = 5000) {
            const toastContainer = document.getElementById('toastContainer');
            
            // Create toast element
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            
            // Create toast content
            toast.innerHTML = `
                <div class="toast-header">
                    <div class="toast-title">Last Account Activity</div>
                    <button class="toast-close" onclick="this.parentElement.parentElement.remove()">&times;</button>
                </div>
                <div class="toast-message">${message}</div>
            `;
            
            // Add toast to container
            toastContainer.appendChild(toast);
            
            // Show toast with animation
            setTimeout(() => {
                toast.classList.add('show');
            }, 100);
            
            // Auto-remove after specified duration
            setTimeout(() => {
                if (toast.parentElement) {
                    toast.classList.remove('show');
                    setTimeout(() => {
                        if (toast.parentElement) {
                            toast.remove();
                        }
                    }, 300);
                }
            }, duration);
        }

        // Check if we should show last use notification
        function checkForLastUseNotification() {
            const urlParams = new URLSearchParams(window.location.search);
            const showLastUse = urlParams.get('show_last_use');
            
            if (showLastUse === 'true') {
                // Get last use info from server data
                {{#if lastUseInfo}}
                    const lastUseInfo = {
                        message: "{{lastUseInfo.message}}",
                        type: "{{lastUseInfo.lastUseType}}" === "unsuccessful" ? "warning" : "info"
                    };
                    showToast(lastUseInfo.message, lastUseInfo.type, 5000);
                {{else}}
                    showToast('Welcome back! Your account activity has been recorded.', 'info', 5000);
                {{/if}}
                
                // Clean up the URL parameter
                const newUrl = window.location.pathname;
                window.history.replaceState({}, document.title, newUrl);
            }
        }

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            checkForLastUseNotification();
        });
    </script>
</body>
</html>